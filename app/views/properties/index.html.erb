<div  data-controller= "index-checkboxes"  class="container-fluid bg-white w-100">
  <div class="container-fluid w-100 bg-white text-center ">
    <h1 class="index-h1">1. Chercher et ajouter ses adresses</h1>
  </div>

  <div class="d-flex m-5">
    <!-- Section de recherche et carte -->
    <div class="position-relative" style="width: 50%; height: 1230px; m-20">
      <!-- Search Bar -->
      <div class="position-absolute top-0 start-0 p-3" style="z-index: 1000; width: 450px;">
        <%= form_with url: search_properties_path, method: :get, local: true, class: "d-flex" do %>
          <div class="search-bar-index">
            <%= text_field_tag :address, params[:address], class: "form-control", placeholder: "Entrez l’adresse de votre propriété", id: "address-search" %>
             <%= button_tag(type: 'submit', class: "search-index ms-2 w-90", style: "border-radius: 55%; border: none; background-color: white") do %>
             <i class="fa-solid fa-magnifying-glass" style="color: #27CE8D"></i>
             <% end %>
             <ul id="autocomplete-results" class="list-group mt-1"></ul>
          </div>
        <% end %>
      </div>

      <!-- Map -->
      <div id="home-map" style="width: 100%; height: 100%; border-radius: 10px;"
           data-controller="map"
           data-map-markers-value="<%= @markers.to_json %>"
           data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

    <!-- Formulaire des propriétés -->
    <div class="card-simple-form ms-4 mb-5" style="width: 40%;">
      <h3 class="title-property-form">Adresse</h3>
      <div class="property-form">
        <%= simple_form_for @property do |f| %>
          <!-- Champs du formulaire -->
            <div class="form-group">
            <%= f.input :area_sqm_land, label: "Surface terrain", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :address, label: "Adresse", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :street_number, label: "Numéro d'adresse", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :street_name, label: "Nom de la rue", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :zipcode, label: "Code postal", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :building_height_floors, label: "Nombre d'étages", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :nb_rooms_per_dwelling, label: "Nombre de pièces par logement", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :energy_class, label: "Classe énergétique", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :floor_area_ratio, label: "Coefficient d'occupation des sols", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :nb_dwelling, label: "Nombre de logements", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :density_area, label: "Zone de densité", input_html: { style: "background-color: #DCFFF3" } %>
            </div>
            <div class="form-group">
            <%= f.input :building_zone, label: "Zone à bâtir", input_html: { style: "background-color: #DCFFF3" } %>
            </div>

        <% end %>
      </div>
    </div>
  </div>

  <%= form_with model: @project do |f| %>
  <!-- Liste des propriétés -->
  <div class="container m-auto">
    <div class="container m-auto">
      <div class="index-card shadow">
        <div class="card-header bg-white d-flex justify-content-center mb-4">
          <h3 id ="index-card-h3">Vos propriétés</p>
        </div>
        <div class="index-scroll card-body bg-white ">
          <% @properties.each do |propertie| %>
            <div class="property-card mb-3 p-3 border rounded-5 shadow-sm" id="propertie-<%= propertie.id %>">
              <h5 class="card-title"><%= propertie.address %></h5>
              <div class="d-flex justify-content-start m-1">
                <div class = "property-card-info">Lot :  <%= propertie.nb_dwelling %></div>
                <div class = "property-card-info"><%= propertie.area_sqm_land %>  m²  terrain</div>
                <div class = "property-card-info"><%= propertie.area_sqm_livable %>  m²  habitables</div>
                  <div class= "checkbox-container">
                    <%= check_box_tag 'property_ids[]', propertie.id, class: 'properties-checkbox', data: { action: "change->index-checkboxes#setProjectList" }%>
                  </div>

              </div>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal pour créer un projet -->
  <div class="container m-auto text-center">
    <button type="button" class="btn btn-primary m-3 btn-custom-text p-3 w-150" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Créer un projet
    </button>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
      <div class="modal-content bg-custom rounded-5 ">
        <div class="modal-header border-top-0 border-bottom-0 border-start-0 border-end-0 ">
          <h1 class="modal-title fs-4 ms-auto " id="exampleModalLabel">Créer un Projet</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body border-top-0 border-bottom-0 border-start-0 border-end-0">
          <%= f.text_field :project_name, label: 'Nom du projet', placeholder: 'Mon idée de projet',  style: 'width: 50%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;' %>
          <%= f.submit 'Créer le projet', class: 'btn btn-primary btn-custom-text btn-custom-size '%>
          <h4 id= "modal-property-list-title">Propriétés Sélectionnées</h4>
          <% @properties.each do |propertie| %>
            <div data-index-checkboxes-target = "propertyCard"  class="modal-property-card mb-3 p-3 border rounded-5 shadow-sm d-none d-block" id="propertie-<%= propertie.id %>">
              <h5 class="card-title"><%= propertie.address %></h5>
              <div class="d-flex justify-content-start m-1">
                <div class = "property-card-info"><strong><%= propertie.nb_dwelling %></strong> Lot(s)  </div>
                <div class = "property-card-info"><strong><%= propertie.area_sqm_land %></strong>  m²  terrain</div>
                <div class = "property-card-info"><strong><%= propertie.area_sqm_livable %></strong>  m²  habitables</div>

              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
