<h1>Votre propriété en détails</h1>
<p>Find me in app/views/properties/new.html.erb</p>


<div class="container">
  <div class="card-body">
    <%= simple_form_for @property do |f| %>
      <%= f.input :area_sqm_land %>
      <%= f.input :year_construction %>
      <%= f.input :area_sqm_livable %>
      <%= f.input :floor_area_ratio %>
      <%= f.input :nb_dwelling %>
      <%= f.input :density_area %>
      <%= f.input :building_zone %>
      <%= f.submit "Sauvegarder mon adresse" %>
    <% end %>
  </div>
  <div id = "home-map" style="width: 40%; height: 600px; align-items: center; margin: auto; border-radius: 10px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
